nextflow_process {

    name "Test Process BRACKEN_BUILD"
    script "../main.nf"
    process "BRACKEN_BUILD"
    tag "bracken"
    tag "kraken2"
    tag "kraken2/add"
    tag "kraken2/build"
    tag "bracken/build"
    tag "gunzip"
    tag "modules"
    tag "modules_nfcore"
    
    setup {

        run("GUNZIP") {
            script "modules/nf-core/gunzip/main.nf"
            process {
                """
                input[0] = Channel.of([
                    [],
                    file(
                        params.test_data['sarscov2']['metagenome']['prot_accession2taxid_gz'],
                        checkIfExists: true
                    )
                ])
                """
            }
        }

        run("KRAKEN2_ADD") {
            script "modules/nf-core/kraken2/add/main.nf"
            process {
                """
                input[0] = [
                    [ id:'test' ],
                        [
                        file(params.test_data['sarscov2']['genome']['genome_fasta'], checkIfExists: true),
                        file(params.test_data['sarscov2']['genome']['proteome_fasta'], checkIfExists: true)
                        ]
                    ]
                input[1] = file(params.test_data['sarscov2']['metagenome']['prot_names_dmp'], checkIfExists: true)
                input[2] = file(params.test_data['sarscov2']['metagenome']['prot_nodes_dmp'], checkIfExists: true)
                input[3] = GUNZIP.out.gunzip.map{ it[1] }
                """
            }
        }

        run("KRAKEN2_BUILD") {
            script "modules/nf-core/kraken2/build/main.nf"
            process {
                """
                input[0] = KRAKEN2_ADD.out.db
                input[1] = true
                """
            }

        }

    }

    test("sarscov2 - bracken_build") {

        when {
            process {
                """
                input[0] = KRAKEN2_BUILD.out.db
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.db.get(0).get(1) ==~ ".*/test" },
                { assert snapshot(
                        path("${process.out.db[0][1]}/database100mers.kmer_distrib")
                    ).match()
                }
            )
        }

    }
    
    test("sarscov2 - bracken_build stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = KRAKEN2_BUILD.out.db
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match()
                }
            )
        }

    }

}
